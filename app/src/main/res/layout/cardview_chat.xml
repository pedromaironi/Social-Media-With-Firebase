<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="25dp"
    android:layout_marginLeft="25dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageChat"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_persona_gray" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp">

            <TextView
                android:id="@+id/textViewUsernameChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuario"
                android:maxLines="1"
                android:textColor="@color/black_color"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textViewLastMessageChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:maxLines="1"
                android:textColor="@color/black_color"
                android:textSize="14dp"
                android:layout_marginTop="3dp"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/frameLayoutMessageNotRead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/circularview" />

            <TextView
                android:id="@+id/textViewMessageNotRead"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:textColor="@color/white_color"
                android:layout_gravity="center"/>

        </FrameLayout>


    </LinearLayout>

</FrameLayout>